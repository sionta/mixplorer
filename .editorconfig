# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
charset = utf-8
insert_final_newline = true

[*.sh]
end_of_line = lf
indent_size = 4

[*.{cmd,bat,ps1,psd1,psm1}]
indent_size = 4
end_of_line = crlf

[*.{md,txt,xml,yml,yaml,json}]
indent_size = 2

[*.svg]
insert_final_newline = false
